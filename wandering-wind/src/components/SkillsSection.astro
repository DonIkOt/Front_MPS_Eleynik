--- 
import { Image } from 'astro:assets';

import BackImage from '../Images/backs.jpg';
import htmlImage from '../Images/html.jpg';
import javaImage from '../Images/java.png';
import cssImage from '../Images/css.jfif';

---
 
 <section class="skills-section">
        <div class="container">
            <h2 class="skills-section__title">Я умею</h2>
            <div class="skills-section__content">
                <div class="skill">
                    <div class="skill__image-container">
                        <Image src={htmlImage} alt="HTML" class="skill__image">
                    </div>
                    <p class="skill__name">HTML</p>
                </div>
                <div class="skill">
                    <div class="skill__image-container">
                        <Image src={javaImage} alt="CSS" class="skill__image">
                    </div>
                    <p class="skill__name">CSS</p>
                </div>
                <div class="skill">
                    <div class="skill__image-container">
                        <Image src={javaImage} alt="JS" class="skill__image">
                    </div>
                    <p class="skill__name">JS</p>
                </div>
            </div>
        </div>
    </section>

  <style>
  .skills-section {
    padding: 0 auto;
    background-image: url('backs.jpg'); /* Задаём фоновое изображение */
    background-size: cover; /* Обеспечивает, что изображение будет покрывать всю секцию */
    background-position: center; /* Центрируем изображение */
    background-repeat: no-repeat; /* Изображение не будет повторяться */
    text-align: center;
    min-height: 500px;
    padding-bottom: 150px;
}

.skills-section__title {
    font-size: 72px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 800;
    color: #333333;
    padding-top: 135px;
    margin-bottom: 50px;
}

.skills-section__content {
    display: flex;
    justify-content: center;
    gap: 60px; /* Увеличиваем расстояние между блоками */
}

.skill {
    display: flex;
    max-height: 350px;
    flex-direction: column;
    align-items: center;
    background-color: #0C1B2D;
    width: 350px; /* Увеличили размер блока */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

.skill__image-container {
    width: 100%;
    height: 300px;
    overflow: hidden;
    
}

.skill__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.skill__name {
    font-size: 64px;
    font-weight: 800;
    font-family: 'Montserrat', sans-serif;
    color: #ffffff;
}

@media (max-width: 1024px) {
    .skills-section__content {
        
        flex-direction: column;
        align-items: center;
        gap: 20px;
       
    }
}
</style>   